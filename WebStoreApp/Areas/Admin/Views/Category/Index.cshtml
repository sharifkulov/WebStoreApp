@model ShoppingStore.DataAccess.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Лист категорий</h2>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category"><i class="bi bi-plus-circle"></i>Добавить категорию</a>
            </div> 
    </div>
</div>

<table class="table table-bordered table-striped" style = "width:100%">
    <thead>
        <tr>
            <th>
                Название категории
            </th>
            <th>
                Порядок отображения
            </th>
            <th>
                Действие
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.categories)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td>
                    <a asp-action="CreateUpdate" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Обновить</a>
                    <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
